                            <Label Content="Enable Scheduled Tasks" VerticalAlignment="Center" />
                            <CheckBox Grid.Column="1"
                                      IsChecked="{Binding AppSettings.EnableScheduledTasks, Mode=TwoWay}" />

                            <Label Content="Enable Batch Processing" 
                                   Grid.Row="2"
                                   VerticalAlignment="Center" />
                            <CheckBox Grid.Row="2" Grid.Column="1"
                                      IsChecked="{Binding AppSettings.EnableBatchProcessing, Mode=TwoWay}" />

                            <Label Content="Enable Compression Profiles" 
                                   Grid.Row="4"
                                   VerticalAlignment="Center" />
                            <CheckBox Grid.Row="4" Grid.Column="1"
                                      IsChecked="{Binding AppSettings.EnableCompressionProfiles, Mode=TwoWay}" />

                            <Label Content="Enable Statistics Tracking" 
                                   Grid.Row="6"
                                   VerticalAlignment="Center" />
                            <CheckBox Grid.Row="6" Grid.Column="1"
                                      IsChecked="{Binding AppSettings.EnableStatisticsTracking, Mode=TwoWay}" />

                            <Label Content="Enable File Type Analysis" 
                                   Grid.Row="8"
                                   VerticalAlignment="Center" />
                            <CheckBox Grid.Row="8" Grid.Column="1"
                                      IsChecked="{Binding AppSettings.EnableFileTypeAnalysis, Mode=TwoWay}" />

                            <Label Content="Scheduler Check Interval (seconds)" 
                                   Grid.Row="10"
                                   VerticalAlignment="Center" />
                            <ui:NumberBox Grid.Row="10" Grid.Column="1"
                                          Minimum="10"
                                          Maximum="3600"
                                          Value="{Binding AppSettings.SchedulerCheckInterval, Mode=TwoWay}" />

                            <Label Content="Default Compression Profile" 
                                   Grid.Row="12"
                                   VerticalAlignment="Center" />
                            <Button Grid.Row="12" Grid.Column="1"
                                    Content="Select Profile"
                                    Command="{Binding SelectDefaultProfileCommand}" />
                        </Grid>
                    </StackPanel>
                </ui:CardExpander>

            </StackPanel>

        </ScrollViewer>

    </Grid>

</Page>
