<Page
    x:Class="ProfilesPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:CompactGUI"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="Compression Profiles"
    d:DataContext="{d:DesignInstance local:ProfilesViewModel}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
    ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    mc:Ignorable="d">

    <Grid Margin="18,0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,12">
            <ui:Button
                Appearance="Primary"
                Command="{Binding CreateProfileCommand}"
                Content="Create Profile"
                Icon="Add24" />
            <ui:Button
                Margin="8,0,0,0"
                Command="{Binding EditProfileCommand}"
                Content="Edit"
                Icon="Edit24" />
            <ui:Button
                Margin="8,0,0,0"
                Command="{Binding CloneProfileCommand}"
                Content="Clone"
                Icon="Copy24" />
            <ui:Button
                Margin="8,0,0,0"
                Command="{Binding DeleteProfileCommand}"
                Content="Delete"
                Icon="Delete24" />
        </StackPanel>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <ui:CardControl Grid.Column="0" Margin="0,0,8,12">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <TextBlock
                        Grid.Row="0"
                        Margin="12"
                        FontSize="16"
                        FontWeight="Medium"
                        Text="Compression Profiles" />

                    <ListView
                        Grid.Row="1"
                        Margin="12,0,12,12"
                        ItemsSource="{Binding Profiles}"
                        SelectedItem="{Binding SelectedProfile}">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Grid Margin="0,4">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>

                                    <ui:SymbolIcon
                                        Grid.Column="0"
                                        Margin="0,0,12,0"
                                        FontSize="24"
                                        Symbol="Settings24" />

                                    <StackPanel Grid.Column="1">
                                        <TextBlock
                                            FontSize="14"
                                            FontWeight="Medium"
                                            Text="{Binding Name}" />
                                        <TextBlock
                                            FontSize="12"
                                            Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                            Text="{Binding Description}" />
                                        <TextBlock
                                            FontSize="12"
                                            Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                            Text="{Binding IsDefault, StringFormat=Default: \{0\}}" />
                                    </StackPanel>
                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </Grid>
            </ui:CardControl>

            <GridSplitter
                Grid.Column="1"
                Width="4"
                Margin="0,0,0,12"
                HorizontalAlignment="Center"
                VerticalAlignment="Stretch" />

            <ui:CardControl Grid.Column="2" Margin="8,0,0,12">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <TextBlock
                        Grid.Row="0"
                        Margin="12"
                        FontSize="16"
                        FontWeight="Medium"
                        Text="Profile Details" />

                    <ScrollViewer Grid.Row="1" Margin="12,0,12,12">
                        <StackPanel>
                            <TextBlock
                                Margin="0,0,0,4"
                                FontSize="14"
                                FontWeight="Medium"
                                Text="Name" />
                            <ui:TextBox Text="{Binding EditingProfile.Name, Mode=TwoWay}" />

                            <TextBlock
                                Margin="0,12,0,4"
                                FontSize="14"
                                FontWeight="Medium"
                                Text="Description" />
                            <ui:TextBox Text="{Binding EditingProfile.Description, Mode=TwoWay}" />

                            <TextBlock
                                Margin="0,12,0,4"
                                FontSize="14"
                                FontWeight="Medium"
                                Text="Compression Settings" />
                            <ui:CardControl>
                                <StackPanel Margin="12">
                                    <TextBlock
                                        Margin="0,0,0,4"
                                        FontSize="13"
                                        Text="Compression Algorithm" />
                                    <ComboBox SelectedIndex="{Binding EditingProfile.CompressionMode, Mode=TwoWay}">
                                        <ComboBoxItem Content="XPRESS4K (Fastest)" />
                                        <ComboBoxItem Content="XPRESS8K (Balanced)" />
                                        <ComboBoxItem Content="XPRESS16K (Better Compression)" />
                                        <ComboBoxItem Content="LZX (Best Compression)" />
                                    </ComboBox>

                                    <CheckBox
                                        Margin="0,8,0,0"
                                        Content="Skip poorly compressed file types"
                                        IsChecked="{Binding EditingProfile.SkipNonCompressable, Mode=TwoWay}" />
                                    <CheckBox
                                        Margin="0,4,0,0"
                                        Content="Skip user-defined file types"
                                        IsChecked="{Binding EditingProfile.SkipUserNonCompressable, Mode=TwoWay}" />
                                    <CheckBox
                                        Margin="0,4,0,0"
                                        Content="Watch folder for changes"
                                        IsChecked="{Binding EditingProfile.WatchFolderForChanges, Mode=TwoWay}" />

                                    <TextBlock
                                        Margin="0,8,0,4"
                                        FontSize="13"
                                        Text="Max Compression Threads" />
                                    <ui:NumberBox
                                        Minimum="0"
                                        Value="{Binding EditingProfile.MaxCompressionThreads, Mode=TwoWay}" />
                                    <TextBlock
                                        FontSize="11"
                                        Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                        Text="0 = Use all available cores" />
                                </StackPanel>
                            </ui:CardControl>

                            <CheckBox
                                Margin="0,12,0,0"
                                Content="Set as default profile"
                                IsChecked="{Binding EditingProfile.IsDefault, Mode=TwoWay}" />

                            <StackPanel
                                Margin="0,16,0,0"
                                HorizontalAlignment="Right"
                                Orientation="Horizontal">
                                <ui:Button
                                    Command="{Binding SaveProfileCommand}"
                                    Content="Save"
                                    Icon="Save24" />
                                <ui:Button
                                    Margin="8,0,0,0"
                                    Command="{Binding CancelEditCommand}"
                                    Content="Cancel" />
                            </StackPanel>
                        </StackPanel>
                    </ScrollViewer>
                </Grid>
            </ui:CardControl>
        </Grid>
    </Grid>
</Page>